doctype html 
html(lang="ko")
    head    
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="http://unpkg.com/mvp.css")
    body
        header            
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/videos/upload") Upload Video
                    li  
                        a(href="/") Home
                    li  
                        a(href="/search") Search
                    if loggedIn  
                        li 
                            a(href="/logout") Logout
                        li 
                            a(href = "/my-profile0") #{loggedInUser.name}'s profile

                    else                 
                        li  
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
        main    
            block content
    include partials/footer.pug 