extends base

block content   
    if errorMessage 
        span=errorMessage
    form(method="POST")       
        input(placeholder = "Username" , name="username", type=text ,required)
        input(placeholder = "Password" , name="password", type=text ,required)          
        input(type="submit", value = "Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=58c630158a47449e977c") Continue With Github &rarr;
      
    div 
        span Don't have an account?
        a(href="/join") Create one now &rarr;